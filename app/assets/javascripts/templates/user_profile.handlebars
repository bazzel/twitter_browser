<div class="profile-header">
  <div class="main-info">
    <div class="profile-image-container">
      <img {{bindAttr src="view.profileImageUrl"}}>
    </div>
    <div class="profile-details">
      <div class="full-name">
        <h2>{{view.fullName}}</h2>
      </div>
      <div class="screen-name-and-location">
        <span class="handle">@{{view.userName}}</span> {{view.location}}
      </div>
      <div class="bio">{{view.bio}}</div>
  </div>
</div>
<div class="other-info">
  <ul class="user-stats">
    <li>
      {{view.tweetCount}} <span class="user-stats-stat">Tweets</span>
    </li>
      <li>
        {{view.followingCount}} <span class="user-stats-stat">Following</span>
      </li>
    <li>
      {{view.followersCount}} <span class="user-stats-stat">Followers</span>
    </li>
  </ul>
</div>
