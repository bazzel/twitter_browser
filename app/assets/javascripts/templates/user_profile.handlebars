<div class="profile-header">
  <div class="main-info">
    <div class="profile-image-container">
      <img {{bindAttr src="profileImageUrl"}}>
    </div>
    <div class="profile-details">
      <div class="full-name">
        <h2>{{fullName}}</h2>
      </div>
      <div class="screen-name-and-location">
        <span class="handle">@{{userName}}</span> {{location}}
      </div>
      <div class="bio">{{bio}}</div>
  </div>
</div>
<div class="other-info">
  <ul class="user-stats">
    <li>{{tweetCount}} <span class="user-stats-stat">Tweets</span></li>
    <li>{{followingCount}} <span class="user-stats-stat">Following</span></li>
    <li>{{followersCount}} <span class="user-stats-stat">Followers</span></li>
  </ul>
</div>
